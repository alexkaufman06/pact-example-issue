{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2022", // choose based on our Node version: https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "types": ["jest"],
    "paths": {
      "@ui/components/*": ["components/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    ".next/types/**/*.ts",
    "./types/**/*.ts",
    "./types/next-auth.d.ts",
    "typings.d.ts",
    "tailwind.config.ts",
    "jest.*.ts",
    "**/*.d.ts",
    "playwright.config.ts",
    "e2e-tests/*.setup.ts",
    "tests/**/*.tsx",
    "sentry*.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
